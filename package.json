{
  "name": "read-config",
  "version": "1.0.0",
  "private": true,
  "description": "Read Workflow Configuration",
  "scripts": {
    "build": "ncc build src/index.ts",
    "test": "jest",
    "all": "npm run build && npm run test",
    "test:cov": "jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix --max-warnings 0 .",
    "lint:check": "eslint --max-warnings 0 .",
    "prepare": "husky install"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "src"
  },
  "lint-staged": {
    "*.{js,md,json,yml,yaml}": [
      "npm run format"
    ],
    "*.{ts,tsx}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "importSort": {
    ".js, .ts": {
      "parser": "typescript",
      "style": "eslint"
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "js-yaml": "^4.1.0",
    "@iarna/toml": "^2.2.5",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.4",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "husky": "^8.0.3"
  }
}
